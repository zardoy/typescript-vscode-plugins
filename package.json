{
    "name": "ts-essential-plugins",
    "displayName": "TypeScript Essential Plugins",
    "version": "0.0.1",
    "license": "MIT",
    "contributes": {
        "typescriptServerPlugins": [
            {
                "name": "typescript-essential-plugins",
                "enableForWorkspaceTypeScriptVersions": true
            }
        ]
    },
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "publisher": "zardoy",
    "private": true,
    "keywords": [
        "ts",
        "javascript",
        "plugin",
        "webstorm",
        "typescript hero"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:javascriptreact",
        "onLanguage:typescript",
        "onLanguage:typescriptreact"
    ],
    "scripts": {
        "start": "vscode-framework start",
        "build": "tsc && tsc -p typescript --noEmit && vscode-framework build && node buildTsPlugin.mjs",
        "test": "pnpm test-plugin",
        "test-plugin": "vitest --globals",
        "watch-plugin": "tsc -p typescript -w",
        "lint": "eslint src/**"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/node": "^16.11.21",
        "@types/vscode": "^1.63.1",
        "@zardoy/tsconfig": "^1.3.1",
        "esbuild": "^0.14.38",
        "fs-extra": "^10.1.0",
        "type-fest": "^2.13.1",
        "typed-jsonfile": "^0.2.1",
        "typescript-old": "npm:typescript@4.5.4",
        "typescript": "^4.8.3",
        "typescript-essential-plugins": "workspace:*",
        "vitest": "^0.15.1",
        "vscode-manifest": "^0.0.4"
    },
    "dependencies": {
        "@types/lodash": "^4.14.182",
        "@vscode/emmet-helper": "^2.8.4",
        "@zardoy/utils": "^0.0.6",
        "@zardoy/vscode-utils": "^0.0.28",
        "chokidar": "^3.5.3",
        "eslint": "^8.7.0",
        "eslint-config-zardoy": "^0.2.8",
        "lodash": "^4.17.21",
        "lodash.get": "^4.4.2",
        "modify-json-file": "^1.2.2",
        "vscode-framework": "^0.0.18"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 160
    },
    "release": {
        "changelog": {
            "style": "gitmoji"
        }
    }
}
